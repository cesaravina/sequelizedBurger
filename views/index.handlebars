
<div class="container">

  <div class="row center-block text-center">
    <h1>Welcome to GoodBurger, May I Take Your Order?!!!</h1>
  </div>

  <div>
    <section class="col-sm-4 center-block text-center">

    <h2>Eat a Burger!</h2>

    <ul>
      {{#each burger}}
        {{#unless this.eaten}}
          <li>
            {{this.name}}

            <form action="/eatBurger" method="POST">
              <input type="hidden" name="burgerID" value={{this.id}}>
              <button type="submit">Nom!</button>
            </form>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
    </section>
    <section class="col-sm-4 center-block text-center">
      <h2>Add a New Burger</h2>
      <img src="/assets/images/burgerpic.png" />
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="ca">Burger Type:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Submit!</button>
      </form>
    </section>
    <section class="col-sm-4 center-block text-center">
    <h2>Burgers Eaten!</h2>

    <ul>
      {{#each burger}}
        {{#if this.eaten}}
          <li>
            {{this.name}}

          </li>
        {{/if}}
      {{/each}}
    </ul>
  </section>
  </div>
  <div class="row center-block text-center">



</div>
</div>
